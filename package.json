{
  "name": "slopcannon",
  "version": "0.1.1",
  "description": "Create a git worktree. Launch Claude Code. Ship slop.",
  "type": "module",
  "bin": {
    "slopcannon": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target bun",
    "postbuild": "echo '#!/usr/bin/env bun' | cat - ./dist/cli.js > ./dist/cli.tmp && mv ./dist/cli.tmp ./dist/cli.js && chmod +x ./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "claude",
    "worktree",
    "vibe-coding",
    "slop"
  ],
  "author": "sragss",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "1.0.1"
  },
  "devDependencies": {
    "bun-types": "^1.3.9"
  }
}
